<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginBottom="1dp"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/junkcleaner_item_icon_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/junkcleaner_item_title_tv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/junkcleaner_title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/junkcleaner_item_total_size_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/junkcleaner_title"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/junkcleaner_item_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.jerrywang.phonehelper.widget.ProgressWheel
            android:id="@+id/junkcleaner_item_pw"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:matProg_barColor="@color/colorPrimary"
            app:matProg_barWidth="2dp"
            app:matProg_progressIndeterminate="true" />

    </RelativeLayout>
</LinearLayout>
