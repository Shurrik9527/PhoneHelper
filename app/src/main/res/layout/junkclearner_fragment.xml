<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:id="@+id/junkclearner_ll"
        android:background="@color/colorPrimary"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            >

            <com.jerrywang.phonehelper.widget.RadarScanView
                android:id="@+id/junkclearner_rsv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100M"
                app:labelText="Memory Used"
                ></com.jerrywang.phonehelper.widget.RadarScanView>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/junkclearner_current_scan_tv"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/junkclearner_ll"
        android:textSize="12sp"
        android:textColor="@color/junkcleaner_title"
       android:gravity="center_vertical"
        android:paddingLeft="10dp"
        />

    <ExpandableListView
        android:overScrollMode="never"
        android:id="@+id/junkclearner_elv"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/junkclearner_current_scan_tv"
        />

    <ImageView
        android:id="@+id/junkclearner_start_iv"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@mipmap/clean"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
