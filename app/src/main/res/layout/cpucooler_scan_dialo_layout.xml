<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/cpucooler_background_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimary"
        >

        <ImageView
            android:id="@+id/cpucooler_thermometer_iv"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/cpucooler_thermometer_icon"
            />


        <com.jerrywang.phonehelper.widget.TopBottomScanView
            android:id="@+id/cpucooler_scan_tbsv"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            ></com.jerrywang.phonehelper.widget.TopBottomScanView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Scaning CPU..."
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_above="@+id/cpucooler_thermometer_iv"
            android:layout_marginBottom="45dp"
            />


    </RelativeLayout>



</RelativeLayout>
